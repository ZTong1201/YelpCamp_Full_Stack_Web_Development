<% include ../partials/headers %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Create a New Campground</h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-5">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Grand Canyon" required>
            </div>
            <div class="form-group">
                <label for="image">Image Url</label>
                <input class="form-control" type="text" name="image" id="image" placeholder="image url" required>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" name="price" placeholder="10.99" min="0" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="description" placeholder="description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footers %>